window {
    background-color: rgba(28, 28, 28, 0.95);
    border: 4px solid #C3B091;
    border-radius: 12px;
    padding: 20px;
}

#osd {
    background-color: transparent;
    font-family: monospace;
    font-size: 18px;
    color: #C3B091;
}

image {
    color: #C3B091;
    margin: 0px 20px;
}

levelbar trough {
    background-color: #2B2D2E;
    border-radius: 6px;
    min-height: 24px;
    min-width: 350px;
}

levelbar block.filled {
    background-color: #C3B091;
    border-radius: 6px;
}

levelbar block.empty {
    background-color: transparent;
}

label {
    color: #C3B091;
    font-weight: bold;
    margin: 10px;
}

