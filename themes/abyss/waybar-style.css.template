* {
    border: none;
    border-radius: 0;
    font-family: "MesloLGL Nerd Font", "DejaVu Sans Mono", monospace;
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background-color: rgba(10, 22, 40, 0.95);
    color: #E8E6DC;
    transition-property: background-color;
    transition-duration: 0.5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

#workspaces {
    background-color: transparent;
    padding: 0;
    margin: 0 0 0 12px;
}


/* Workspace Button Styles - Bottom Border (Underline) */

#workspaces button {
    padding: 4px 10px;
    margin: 0 4px;
    background-color: transparent;
    color: __SECONDARY__;
    border: none;
    border-radius: 0;
    border-bottom: 3px solid transparent;
    font-size: 14px;
    font-weight: normal;
    min-width: 24px;
    transition: all 0.2s ease-in-out;
}

#workspaces button:hover {
    background-color: __ACCENT_MUTED_ALPHA__;
    color: __PRIMARY__;
}

#workspaces button.active,
#workspaces button.focused {
    background-color: transparent;
    color: __PRIMARY__;
    border: none;
    border-radius: 0;
    border-bottom: 3px solid __PRIMARY__;
    font-weight: bold;
    font-size: 14px;
    padding: 4px 10px;
}

#workspaces button.active label,
#workspaces button.focused label {
    color: __PRIMARY__;
    font-weight: bold;
    font-size: 14px;
}

#workspaces button.visible {
    background-color: __ACCENT_DIM_ALPHA__;
    color: __ACCENT_DIM__;
}
#mode {
    background-color: rgba(212, 165, 116, 0.2);
    color: #D4A574;
    padding: 0 10px;
    margin-left: 10px;
    font-weight: normal;
}

#clock,
#battery,
#backlight,
#cpu,
#memory,
#network,
#bluetooth,
#pulseaudio,
#custom-power {
    padding: 0 12px;
    background-color: transparent;
    color: #E8E6DC;
}

#clock {
    font-weight: normal;
    color: #7BA5D4;
    background-color: transparent;
}

#battery {
    color: #2E4A6B;
}

#backlight {
    color: #2E4A6B;
}

#cpu {
    color: #2E4A6B;
}

#memory {
    color: #1E3A5F;
}

#network {
    color: #2E4A6B;
}

#network.disconnected {
    background-color: rgba(212, 165, 116, 0.3);
    color: #D4A574;
    font-weight: bold;
}

#bluetooth {
    color: #2E4A6B;
}

#bluetooth.disabled {
    color: #1E3A5F;
}

#bluetooth.connected {
    color: #1E3A5F;
}

#pulseaudio {
    color: #2E4A6B;
}

#pulseaudio.muted {
    background-color: rgba(21, 40, 68, 0.5);
    color: #152844;
}

#custom-night-mode {
    color: #2E4A6B;
    font-size: 14px;
    padding: 0 12px;
}

#custom-night-mode.active {
    color: #D4A574;
}

#custom-night-mode.inactive {
    color: #2E4A6B;
}

#custom-night-mode:hover {
    color: #7BA5D4;
    background-color: rgba(30, 58, 95, 0.2);
}

#custom-power {
    color: #2E4A6B;
    font-size: 14px;
    margin-right: 12px;
}

#custom-power:hover {
    color: #7BA5D4;
    background-color: rgba(30, 58, 95, 0.2);
}

/* Battery Profile Module */
#custom-battery-profile {
    padding: 0 12px;
    background-color: transparent;
    color: #2E4A6B;
}

#custom-battery-profile.auto {
    color: #1E3A5F;
}

#custom-battery-profile.power {
    color: #3E5A7B;
}

#custom-battery-profile.balanced {
    color: #2E4A6B;
}

#custom-battery-profile.performance {
    color: #D4A574;
}

#custom-battery-profile.charging {
    color: #7BA5D4;
}

#custom-battery-profile.critical {
    color: #D4A574;
    animation: blink 1s ease-in-out infinite;
}

#custom-battery-profile.warning {
    color: #D4A574;
}
